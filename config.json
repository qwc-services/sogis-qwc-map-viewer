{
  "permalinkServiceUrl": "/permalink/",
  "elevationServiceUrl": "/elevation/",
  "editServiceUrl": "/api/v1/data/",
  "searchServiceUrl": "/api/v1/search/",
  "authServiceUrl": "/",
  "mapInfoService":  "/api/v1/mapinfo/",
  "featureReportService": "/api/v1/document",
  "translationsPath": "/translations",
  "assetsPath": "/assets",
  "urlPositionFormat": "extent",
  "urlPositionCrs": "",
  "preserveExtentOnThemeSwitch": true,
  "preserveBackgroundOnThemeSwitch": true,
  "preserveNonThemeLayersOnThemeSwitch": true,
  "allowReorderingLayers": true,
  "allowRemovingThemeLayers": true,
  "defaultFeatureStyle": {
    "strokeColor": [0, 0, 255, 1],
    "strokeWidth": 1,
    "strokeDash": [4],
    "fillColor": [255, 0, 255, 0.33],
    "circleRadius": 10,
    "circleBorder": 2,
    "textFill": "black",
    "textStroke": "white"
  },
  "plugins": {
      "mobile": [
        {
          "name": "Map"
        },
        {
          "name": "HomeButton"
          ,
          "cfg": {
            "position": 2
          }
        },
        {
          "name": "LocateButton",
          "cfg": {
            "position": 1
          }
        },
        {
          "name": "BackgroundSwitcher",
          "cfg": {
            "position": 0
          }
        },
        {
            "name": "TopBar",
            "cfg": {
              "logoFormat": "jpg",
              "menuItems": [
                {"key": "ThemeSwitcher", "icon": "img/themes.svg"},
                {"key": "LayerTree", "icon": "img/layers.svg"},
                {"key": "Share", "icon": "img/share.svg"},
                {"key": "Tools", "icon": "img/tools.svg", "subitems": [
                  {"key": "Measure", "icon": "img/measure_white.svg"},
                  {"key": "Redlining", "icon": "img/draw.svg"},
                  {"key": "Editing", "icon": "img/editing.svg"},
                  {"key": "RasterExport", "icon": "img/rasterexport.svg"}
                ]},
                {"key": "Print", "icon": "img/print.svg"},
                {"key": "Help", "icon": "img/info.svg"},
                {"key": "Login", "icon": "img/login.svg"}
              ],
              "searchOptions": {
                "minScale": 1000,
                "showProviderSelection": true,
                "providerSelectionAllowAll": true
              },
              "appMenuClearsTask": true,
              "logoClickResetsTheme": true,
              "logoUrl": "/"
            }
        },
        {
          "name": "ThemeSwitcher"
        },
        {
          "name": "Measure",
          "cfg": {
            "showMeasureModeSwitcher": true
          }
        },
        {
          "name": "Identify",
          "cfg": {
            "params": {
              "FI_POINT_TOLERANCE": 32,
              "FI_LINE_TOLERANCE": 16,
              "FI_POLYGON_TOLERANCE": 8
            },
            "enableExport": false,
            "longAttributesDisplay": "wrap"
          }
        },
        {
          "name": "Share",
          "cfg": {
            "showSocials": true,
            "showLink": true,
            "showQRCode": true
          }
        },
        {
          "name": "Print"
        },
        {
          "name": "Help"
        },
        {
          "name": "MapCopyright"
        },
        {
          "name": "LayerTree",
          "cfg": {
            "showLegendIcons": false,
            "showRootEntry": true,
            "showQueryableIcon": false,
            "groupTogglesSublayers": false,
            "flattenGroups": true,
            "legendThumbnail": "legend_thumbnail.svg",
            "layerInfoWindowSize": {"width": 480, "height": 400}
          }
        },
        {
          "name": "RasterExport",
          "cfg": {
            "dpis": [96, 300]
          }
        },
        {
          "name": "Redlining"
        },
        {
          "name": "Editing"
        },
        {
          "name": "MapCompare"
        },
