{
  "proxyUrl": "http://127.0.0.1:5000/proxy?url=",
  "qwc2serverUrl": "http://qwc2.sourcepole.ch/api/",
  "editServiceUrl": "http://localhost:9092/",
  "translationsPath": "/translations",
  "assetsPath": "/assets",
  "urlPositionFormat": "extent",
  "urlPositionCrs": "",
  "preserveExtentOnThemeSwitch": false,
  "preserveBackgroundOnThemeSwitch": false,
  "defaultFeatureStyle": {
    "strokeColor": [0, 0, 255, 1],
    "strokeWidth": 1,
    "strokeDash": [4],
    "fillColor": [255, 0, 255, 0.33],
    "circleRadius": 10,
    "circleBorder": 2,
    "textFill": "black",
    "textStroke": "white"
  },
  "plugins": {
      "mobile": [
        {
          "name": "Map"
        },
        {
          "name": "HomeButton"
          ,
          "cfg": {
            "position": 2
          }
        },
        {
          "name": "LocateButton",
          "cfg": {
            "position": 1
          }
        },
        {
          "name": "BackgroundSwitcher",
          "cfg": {
            "position": 0
          }
        },
        {
            "name": "TopBar",
            "cfg": {
              "logoFormat": "jpg",
              "menuItems": [
                {"key": "ThemeSwitcher", "icon": "img/themes.svg"},
                {"key": "LayerTree", "icon": "img/layers.svg"},
                {"key": "Share", "icon": "img/share.svg"},
                {"key": "Tools", "icon": "img/tools.svg", "subitems": [
                  {"key": "Measure", "icon": "img/measure_white.svg"},
                  {"key": "Redlining", "icon": "img/draw.svg"},
                  {"key": "Editing", "icon": "img/editing.svg"},
                  {"key": "DxfExport", "icon": "img/dxfexport.svg"},
                  {"key": "RasterExport", "icon": "img/rasterexport.svg"}
                ]},
                {"key": "Print", "icon": "img/print.svg"},
                {"key": "Help", "icon": "img/info.svg"}
              ],
              "searchOptions": {
                "minScale": 1000,
                "showProviderSelection": false
              },
              "appMenuClearsTask": true
            }
        },
        {
          "name": "ThemeSwitcher"
        },
        {
          "name": "Measure",
          "cfg": {
            "showMeasureModeSwitcher": true
          }
        },
        {
          "name": "Identify",
          "cfg": {
            "params": {
              "FI_POINT_TOLERANCE": 32,
              "FI_LINE_TOLERANCE": 16,
              "FI_POLYGON_TOLERANCE": 8
            },
            "enableExport": true
          }
        },
        {
          "name": "Share",
          "cfg": {
            "showSocials": true,
            "showLink": true,
            "showQRCode": true
          }
        },
        {
          "name": "Print"
        },
        {
          "name": "Help"
        },
        {
          "name": "MapCopyright"
        },
        {
          "name": "LayerTree",
          "cfg": {
            "showLegendIcons": true,
            "showRootEntry": true,
            "showQueryableIcon": true,
            "groupTogglesSublayers": false,
            "layerInfoWindowSize": {"width": 480, "height": 400}
          }
        },
        {
          "name": "DxfExport"
        },
        {
          "name": "RasterExport"
        },
        {
          "name": "Redlining"
        },
        {
          "name": "Editing"
        }
      ],
      "desktop": [
        {
          "name": "Map"
        },
        {
          "name": "HomeButton"
          ,
          "cfg": {
            "position": 4
          }
        },
        {
          "name": "LocateButton"
          ,
          "cfg": {
            "position": 3
          }
        },
        {
          "name": "ZoomIn",
          "cfg": {
            "position": 2
          }
        },
        {
          "name": "ZoomOut",
          "cfg": {
            "position": 1
          }
        },
        {
          "name": "BackgroundSwitcher",
          "cfg": {
            "position": 0
          }
        },
        {
            "name": "TopBar",
            "cfg": {
              "logoFormat": "jpg",
              "menuItems": [
                {"key": "ThemeSwitcher", "icon": "img/themes.svg"},
                {"key": "LayerTree", "icon": "img/layers.svg"},
                {"key": "Share", "icon": "img/share.svg"},
                {"key": "Tools", "icon": "img/tools.svg", "subitems": [
                  {"key": "Measure", "icon": "img/measure_white.svg"},
                  {"key": "Redlining", "icon": "img/draw.svg"},
                  {"key": "Editing", "icon": "img/editing.svg"},
                  {"key": "DxfExport", "icon": "img/dxfexport.svg"},
                  {"key": "RasterExport", "icon": "img/rasterexport.svg"}
                ]},
                {"key": "Print", "icon": "img/print.svg"},
                {"key": "Help", "icon": "img/info.svg"}
              ],
              "searchOptions": {
                "minScale": 1000,
                "showProviderSelection": false
              },
              "appMenuClearsTask": true
            }
        },
        {
          "name": "BottomBar",
          "cfg": {
            "viewertitleUrl": "https://www.so.ch/verwaltung/bau-und-justizdepartement/amt-fuer-geoinformation/geoportal/",
            "termsUrl":  "https://www.so.ch/rechtliches/"

          }
        },
        {
          "name": "Measure",
          "cfg": {
            "showMeasureModeSwitcher": true
          }
        },
        {
          "name": "ThemeSwitcher"
        },
        {
          "name": "LayerTree",
          "cfg": {
            "showLegendIcons": true,
            "showRootEntry": true,
            "showQueryableIcon": true,
            "allowMapTips": true,
            "groupTogglesSublayers": false,
            "layerInfoWindowSize": {"width": 480, "height": 400}
          }
        },
        {
          "name": "Identify",
          "cfg": {
            "params": {
              "FI_POINT_TOLERANCE": 16,
              "FI_LINE_TOLERANCE": 8,
              "FI_POLYGON_TOLERANCE": 4
            },
            "enableExport": true,
            "initialWidth": 480,
            "initialHeight": 550
          }
        },
        {
          "name": "MapTip"
        },
        {
          "name": "Share",
          "cfg": {
            "showSocials": true,
            "showLink": true,
            "showQRCode": true
          }
        },
        {
          "name": "Print"
        },
        {
          "name": "Help"
        },
        {
          "name": "MapCopyright"
        },
        {
          "name": "DxfExport"
        },
        {
          "name": "RasterExport"
        },
        {
          "name": "Redlining"
        },
        {
          "name": "Editing"
        }
      ]
  }
}
